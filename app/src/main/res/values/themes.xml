<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyScore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neutral16</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral88Opacity</item>
        <item name="colorSecondaryVariant">@color/neutral48</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>]

    <style name="label">
        <item name="android:textColor">@color/neutral48</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="label_smaller" parent="label">
        <item name="android:textColor">@color/neutral16</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="label_smaller_count" parent="label">
        <item name="android:textColor">@color/neutralYellow</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="label_bigger_count" parent="label">
        <item name="android:textColor">@color/neutralYellow</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>